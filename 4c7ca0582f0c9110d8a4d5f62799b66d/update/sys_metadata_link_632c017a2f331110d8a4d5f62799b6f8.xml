        &lt;description/&gt;
        &lt;name&gt;SaveAccountRecoveryConfig&lt;/name&gt;
        &lt;script&gt;&lt;![CDATA[var SaveAccountRecoveryConfig = Class.create();
SaveAccountRecoveryConfig.prototype = Object.extendsObject(AbstractAjaxProcessor, {


    saveFeature: function() {
        var password = this.getParameter("sysparm_password");
        if (password) {
		var jsonResponse = SNC.PasswordPolicyEvaluator.isValidAcrPassword(password);
          var validationResponse = JSON.parse(jsonResponse);
          if(validationResponse.success == false) {
           return validationResponse.message;
          }
        }
        var responseMessage = JSON.parse(SNC.ACRUtil.saveUserACRConfiguration(password));

        var result = this.newItem("result");
        if (responseMessage.type == 500) {
            return responseMessage.message;
        } else if (responseMessage.type == 200) {
            var InfoMsg = responseMessage.message + ' Local Logins will be controlled. Refer to the Policy &lt;span style="color: #008000;"&gt;&lt;a href="sys_auth_policy_context.do?sys_id=54020f70730220103a5b0dd43cf6a754" target="_blank" title="here" &gt;&lt;span style="text-decoration: underline;"&gt; here &lt;/span&gt;&lt;/a&gt;&lt;/span&gt;.'
			gs.addInfoMessage(gs.getMessage('{0}', InfoMsg));
            return true;
        }
    },

    isPasswordSet: function() {
        return SNC.ACRUtil.isPasswordConfigured(gs.getUserID());
    },

    showEnableButton: function() {
        return gs.hasRole("admin") &amp;&amp; gs.getProperty('glide.sso.acr.enabled') == 'true' &amp;&amp; !this.isUserACRRegistered();
    },

    showDisableButton: function() {
        return gs.hasRole("admin") &amp;&amp; gs.getProperty('glide.sso.acr.enabled') == 'true' &amp;&amp; this.isUserACRRegistered();
    },

    isUserACRRegistered: function() {
        return SNC.ACRUtil.isUserACRRegistered(gs.getUserID()) &amp;&amp; this.isPasswordSet() &amp;&amp; this.isMFARegistered();
    },
		
    isMFARegistered: function() {
        return SNC.ACRUtil.isMFARegistered(gs.getUserID());
    },

    type: 'SaveAccountRecoveryConfig'
});]]&gt;&lt;/script&gt;
